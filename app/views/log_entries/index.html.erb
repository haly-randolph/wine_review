<header>Log entry for <%= link_to(@wine.name, @wine) %></header>
<ol id="log_entries">
    <% @log_entries.each do |log_entry| %>
		<li>			
			<span class="user">by <%= log_entry.name %> </span>
			<span class="date">
			<%= time_ago_in_words(log_entry.created_at) %> ago
			</span>
			<p>
				&quot;<%= log_entry.comments %>&quot;
			</p>
		</li>
    <% end %>
</ol>

<%= link_to 'Write a Log', new_wine_log_entry_path(@wine),
    remote: true,
    data: { 'update-target' => 'review_form_container' },
    class: 'btn btn-primary' %>
<div id="review_form_container"></div>